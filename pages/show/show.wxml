<view class="container">

<!----------image slider----------------->
<swiper class="image" indicator-dots="true" autoplay="false" indicator-active-color="#5cc1b3">
    <block wx:for="{{bannerImages}}">
    <swiper-item>
      <image src="{{item}}" class="image-size" />
    </swiper-item>
  </block>
</swiper>


 <!------ Upload your own photo -----------> 

  <!-- <view class="camera"><image src="/assets/camera-white.png"></image></view> -->


<!------ icons -----------> 
    <view class="icons">
        <image bindtap="sendRating"  data-id="user_id" class='icon' src="/assets/likes.png"></image>
        <text class='rating'>{{spot.cached_votes_total}}</text>
        <image class='icon' src="/assets/location.png"></image>
        <view bindtap="onShareAppMessage">
 <button class="share-btn" open-type="share" type="primary"><image class='icon' src="/assets/share.png"></image></button>
</view>
    </view>

  <!------NAME AND DESCRIPTION -----------> 
      <view class="name-description">
        <view class="name">
          <text>{{spot.name}}</text>
        </view>
        <view class="types">
       <text class="type">{{spot.tag_list}}</text>

        </view>
        <view class="description">
          <text>{{spot.description}}</text>
        </view>
      </view>

<!------map -----------> 
      <view class="page-body">
      <view class="page-section page-section-gap">
        <map
          id="myMap"
          style="width: 100%; height: 300px;"
          latitude="{{latitude}}"
          longitude="{{longitude}}"
          markers="{{markers}}"
          covers="{{covers}}"
          show-location
        ></map>
      </view>
      <view class="btn-area">
        <button bindtap="getCenterLocation" class="page-body-button" type="primary">Get center on the spots</button>
        <button bindtap="moveToLocation" class="page-body-button" type="primary">Your Location</button>
      </view>
    </view>

<!-----container end---->
</view>


