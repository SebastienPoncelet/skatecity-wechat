<view class="container">

<!----------image slider----------------->
<swiper class="image" indicator-dots="true" autoplay="false" indicator-active-color="#5cc1b3">
    <block wx:for="{{bannerImages}}">
    <swiper-item>
      <image src="{{item}}" class="image-size" />
    </swiper-item>
  </block>
</swiper>


 <!------ Upload your own photo -----------> 
  <!-- <view class="camera"><image src="/assets/camera-white.png"></image></view> -->

<!------ icons -----------> 
    <view class="icons">
        <image class='icon' src="/assets/likes.png"></image>
        <image class='icon' src="/assets/location.png"></image>
        <view bindtap="onShareAppMessage">
 <button class="share-btn" open-type="share" type="primary"><image class='icon' src="/assets/share.png"></image></button>
</view>
    </view>

  <!------NAME AND DESCRIPTION -----------> 
      <view class="name-description">
        <view class="name">
          <text>{{skatespot.name}}Skatebowl near Pudong</text>
        </view>
        <view class="types">
          <text class="type">{{skatespot.type}}Bowl</text>
       <text class="type">{{skatespot.type}}Skatepark</text>
        </view>
        <view class="description">
          <text>{{skatespot.description}}The ground here is really smooth and not that big crowds. Also loads of other skatespots near by to check out so definitely recommend.</text>
        </view>
      </view>

<!------map -----------> 
      <view class="page-body">
      <view class="page-section page-section-gap">
        <map
          id="myMap"
          style="width: 100%; height: 300px;"
          latitude="{{latitude}}"
          longitude="{{longitude}}"
          markers="{{markers}}"
          covers="{{covers}}"
          show-location
        ></map>
      </view>
      <view class="btn-area">
        <button bindtap="getCenterLocation" class="page-body-button" type="primary">获取位置</button>
        <button bindtap="moveToLocation" class="page-body-button" type="primary">移动位置</button>
        <button bindtap="translateMarker" class="page-body-button" type="primary">移动标注</button>
        <button bindtap="includePoints" class="page-body-button" type="primary">缩放视野展示所有经纬度</button>
      </view>
    </view>

<!-----container end---->
</view>


