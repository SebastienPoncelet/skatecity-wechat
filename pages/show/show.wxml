<view class="container">
  <!------Image OF SKATESPOT-----------> 
  <view class="image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.pexels.com/photos/305250/pexels-photo-305250.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940');">
      </view>
  <!---add in url to make dynamic: {{photo}} -->


 <!------ Upload your own photo -----------> 
  <view><image class="camera" src="/assets/camera-white.png"></image></view>

<!------ icons -----------> 
    <view class="icons">
        <image class='icon' src="/assets/likes.png"></image>
        <text class='rating'>{{spot.cached_votes_total}}</text>
        <image class='icon' src="/assets/location.png"></image>
        <view bindtap="onShareAppMessage">
 <button class="share-btn" open-type="share" type="primary"><image class='icon' src="/assets/share.png"></image></button>
</view>
    </view>

  <!------NAME AND DESCRIPTION -----------> 
      <view class="name-description">
        <view class="name">
          <text>{{spot.name}}</text>
        </view>
        <view class="types">
       <text class="type">{{spot.tag_list}}</text>

        </view>
        <view class="description">
          <text>{{spot.description}}</text>
        </view>
      </view>

<!------map -----------> 
      <view class="page-body">
      <view class="page-section page-section-gap">
        <map
          id="myMap"
          style="width: 100%; height: 300px;"
          latitude="{{latitude}}"
          longitude="{{longitude}}"
          markers="{{markers}}"
          covers="{{covers}}"
          show-location
        ></map>
      </view>
      <view class="btn-area">
        <button bindtap="getCenterLocation" class="page-body-button" type="primary">Get center on the spots</button>
        <button bindtap="moveToLocation" class="page-body-button" type="primary">Your Location</button>
      </view>
    </view>

<!-----container end---->
</view>


