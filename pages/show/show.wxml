
<!--pages/show/show.wxml-->

<view class="container">
  <!------IMAGE OF SKATESPOT-----------> 
  <view class="image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.pexels.com/photos/305250/pexels-photo-305250.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940');">
      </view>
  <!---add in url to make dynamic: {{photo}} -->

    <!------ Add your own photo -----------> 
  <view class="add"><text>+</text></view>


      <!------ icons -----------> 
  <view class="icons">
      <image class='icon' src="/assets/rating.png"></image>
      <image class='icon' src="/assets/location.png"></image>
      <image class='icon' src="/assets/share.png"></image>
  </view>

  <!------NAME AND DESCRIPTION -----------> 
  <view class="name-description">
    <view class="name">
      <text>{{skatespot.name}}Skateboarding in the city</text>
    </view>
    <view class="type">
      <text>{{skatespot.type}}Street</text>
    </view>
    <view class="description">
      <text>{{items.description}}The ground here is really smooth and not that big crowds. Also loads of other skatespots near by to check out so definitely recommend.</text>
    </view>
  </view>


      <!------map -----------> 
  
  <view class="page-body">
  <view class="page-section page-section-gap">
    <map
      id="myMap"
      style="width: 100%; height: 300px;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      covers="{{covers}}"
      show-location
    ></map>
  </view>
  <view class="btn-area">
    <button bindtap="getCenterLocation" class="page-body-button" type="primary">获取位置</button>
    <button bindtap="moveToLocation" class="page-body-button" type="primary">移动位置</button>
    <button bindtap="translateMarker" class="page-body-button" type="primary">移动标注</button>
    <button bindtap="includePoints" class="page-body-button" type="primary">缩放视野展示所有经纬度</button>
  </view>
</view>


<!-----container end---->
</view>


