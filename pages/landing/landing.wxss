/* pages/landing/landing.wxss */
.userinfo {
  display: flex;
  align-items: center;
  margin-top: 50%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin-top: 50%;
}

.userinfo-nickname {
  color: #ffffff;
}

.banner {
  color:white;
  text-align:center;
  height:100vh;
  background-size:cover !important;
  background-position:center 0px;
  background-repeat:no-repeat;
  display:flex;
  flex-direction:column;
  justify-content:space-between;
  align-items:center;
}

.logo {
  width: 90%;
  height: 23vh;
  animation-duration: 3s;
  backface-visibility: visible !important;
  animation-name: flipInX;
  margin-top:24vh;
}

button {
  width:100%;
  font-weight:700;
  letter-spacing:1px;
  color:#ffffff;
  background-color:#27AA9D;
  border-radius:0vh;
  padding:3vw;
  font-size:4.5vw;
}

.tagline {
  width:80%;
  font-size:4vw;
  font-weight:bold;
  margin-top:-84vh;
}

.h1 {
  font-size: 28px;
  font-weight: bold;
  text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
  text-transform: uppercase;
  line-height:11px;
}

.tag {
  font-size: 25px;
  font-weight: 300;
  color: rgb(255, 255, 255);
  opacity: 1;
  margin-bottom: 30px;
}

@keyframes flipInX {
  from {
    transform: perspective(400px) rotate3d(1, 0, 0, 90deg);
    animation-timing-function: ease-in;
    opacity: 0;
  }

  40% {
    transform: perspective(400px) rotate3d(1, 0, 0, -20deg);
    animation-timing-function: ease-in;
  }

  60% {
    transform: perspective(400px) rotate3d(1, 0, 0, 10deg);
    opacity: 1;
  }

  80% {
    transform: perspective(400px) rotate3d(1, 0, 0, -5deg);
  }

  to {
    transform: perspective(400px);
  }
}