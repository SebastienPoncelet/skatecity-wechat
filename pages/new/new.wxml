<!--pages/new/new.wxml-->
<view class="h1">Add a SkateSpot</view>
  <view class='container'>
    <view class="form-fields">
    <form bindsubmit="bindSubmit" bindreset="formReset">
      <input value="{{ name }}" class="desc" name="name" placeholder="Name the skatespot" />
      <input value='{{ description }}' class="desc" name="description" placeholder="Add a description" />
      <input value='{{ address }}'  bindtap="userChooseLocation" class="desc" name="address" placeholder="Select a location" />
 
        <view class="skatestyle-title">Select Skate Style</view>
          <checkbox-group bindchange="checkboxChange">
            <view class="skatestyle-checkbox">   
              <label class="checkbox" wx:for="{{styles}}" wx:for-item="style">
                <checkbox value="{{style.name}}" color="#27AA9D" checked="{{style.checked}}"/>{{style.value}}
              </label>
            </view>
          </checkbox-group>
          <button class="btn-upload" bindtap="takePhoto">Upload a photo</button>
          <button class="btn-submit" formType="submit">Save</button>
      </form>
  </view>
</view>

