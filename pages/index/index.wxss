.cards {
  margin-top: 8vh;
}

.card {
  display: flex;
  flex-direction: column;
  margin: 19px;
  height: 26vh;
  box-shadow: 1px 2px 7px rgba(0,0,0,0.20);
  border-radius: 6px;
  position: relative;
}

.card-body {
  height: 80%;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  background-size: cover !important;
  background-position: center;
  color: white;
  position: relative;
  border-radius: 6px 6px 0 0;
}

.card-footer {
  background-color: white;
  height: 5vh;
  border-radius: 6px;
  display: flex;
  justify-content: space-between;
  align-items: center
}

.card-footer .rating {
  margin:2vh;
  font-size:4vw;
font-weight:thin;
color:#787878;
}

.card-description .name {
  color:white;
position:absolute;
top:0vh;
margin:2vh;
font-size:16px;
font-weight:bold;
}

.card-footer .location {
 margin:1vh;
