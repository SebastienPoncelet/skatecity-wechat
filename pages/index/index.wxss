/**index.wxss**/
.weui-tab {
  position: relative;
  height: 100%;
  top: 19px;
  color: #484848;
}

.weui-navbar__slider {
  width: 50%;
  background-color: #5cc1b3;
  /* for where the slider starts and ends */ 
  margin-left: 0vh;
}

.weui-navbar__title {
  color:#484848;
  font-size:16px;
  font-weight:bold;
}

.weui-tab__content {
  margin-top:2.5vh;
}

.weui-tab__panel {
  padding-top:5.5vh;
}

.weui-navbar__title-type {
border:2px solid #5cc1b3;
color:#08605F;
background-color:white;
border-radius:20px;
opacity:0.9;
text-align:center;
width:61%;
padding:6px;
box-shadow:0px 3px 12px rgba(0,0,0,0.1);
font-size:4.5vw;
margin:5vh;
}

.weui-navbar-type {
  display: flex;
  justify-content: center;
  margin-left:-6vh;
}

.weui-navbar__item-type {
  margin-left:-1vh;
}

.weui-navbar {
  border: 1rpx solid white;
}

.card-footer .icon {
  width:8vw;
height:4vh;
margin-left:-20vh;
}

.filters {
  display:flex;
  padding-top:2vh;
  margin-left:2vh;
}

.type {
  background-color:white;
  border-radius:8px;
  padding:1vh;
  margin:1.5vh;
  font-size:15px;
  /* border:1px solid #5cc1b3; */
  color: #5cc1b3;
  box-shadow: 0px 1px 7px rgba(0,0,0,0.1);
}

.all {
  background-color:white;
  border-radius:8px;
  padding:1vh;
  margin:1.5vh;
  font-size:15px;
  /* border:1px solid #5cc1b3; */
  color: #5cc1b3;
}

.cards {
  margin-top: 8vh;
}

.card {
  display: flex;
  flex-direction: column;
  margin: 2vh;
  height: 36vh;
  box-shadow: 1px 2px 30px rgba(0,0,0,0.15);
  border-radius: 6px;
  position: relative;
  margin-top:3.5vh;
}

.card-body {
  height: 39vh;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  background-size: cover !important;
  background-position: center;
  color: white;
  position: relative;
  border-radius: 6px 6px 0 0;
}

.card-footer {
  background-color: white;
  height: 10vh;
  border-radius: 6px;
  display: flex;
  justify-content: space-between;
  align-items: center
}

.card-footer .rating {
  margin:2vh;
  font-size:4vw;
  font-weight:thin;
  color:#787878;
}

.card-description .name {
  color:white;
  position:absolute;
  top:0vh;
  margin:2vh;
  font-size:16px;
  font-weight:bold;
}

.card-footer .location {
  margin:1vh;
  /* background-color:rgba(0, 0, 0, 0.5); */
  /* background-color:#435058; */
  /* color:white; */
  color: black;
  width:34vw;
  text-align:center;
  font-size:15px;
  border-radius:9px;
  opacity:0.7;
  font-weight:bold;
}

.page-body {
  width:100vw;
  margin-top:-9vh;
}

.page-section-gap{
  box-sizing: border-box;
  margin-top:14.5vh;
  border-top:2px solid white;
}

.page-body-button {
  margin-bottom: 30rpx;
}

.image-size {
  height:38vh;
  width:100vw;
  background-size: cover !important;
  background-position: center;
  box-shadow: 0px 3px 15px rgba(0,0,0,0.2);
  position: relative;
  margin-top:-14vh;
}

.scroll-background {
  background-color: white;
  height:26vh;
}
.scroll-bar {
  background: white;
  display: flex;
  margin-top:-3vh;
}

.scroll-list-box {
  height: 15vh;
  width: 100vw;
}

.scroll-list {
  height: 150rpx;
  white-space: nowrap;
}

.scroll-item {
  display:inline-block;
  width:323rpx;
  height:187rpx;
  background-repeat:no-repeat;
  background-position:center;
  background-size:321rpx;
  background-color:white;
  border-radius:12px;
  margin-left:2vh;
  box-shadow: 1px 2px 6px rgba(0,0,0,0.15);
}

.toprated {
  margin:4vh;
  font-weight:bold;
  font-size:15px;
  padding-top:3vh;
  padding-bottom:1vh;
}