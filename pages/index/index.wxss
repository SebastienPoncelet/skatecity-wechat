.weui-tab {
  position: relative;
  height: 100%;
  top: 19px;
  color: #484848;
}

.weui-navbar__slider {
  width: 50%;
  background-color: #08605F;
  /* for where the slider starts and ends */ 
  margin-left: 0vh;
}

.weui-navbar__title {
  color:#484848;
  font-size:19px;
}

.weui-tab__content {
  background-color: rgb(250,250,250);
  margin-top:-2vh;
}

.weui-tab__panel {
  padding-top:5.5vh;
}

.filters {
  display: flex;
  justify-content: space-around;
  margin:2vh;
  font-size:4.5vw;
  margin-top:4vh;
}

.type {
  border: 2px solid #08605F;
  color: #08605F;
  background-color: white;
  border-radius: 20px;
  margin:1vh;
  opacity:0.7;
  text-align:center;
  width:36%;
  margin-top:23px;
  padding:9px;
  box-shadow: 0px 3px 12px rgba(0,0,0,0.2);
  font-size:4.5vw;
}

.selected-type {
background-color: #08605F;
  color: white; 
  border-radius: 20px;
  margin:1vh;
  opacity:0.7;
  /* color:white; */
  text-align:center;
  width:36%;
  margin-top:23px;
  padding:9px;
  box-shadow: 0px 3px 12px rgba(0,0,0,0.2);
}

