/**index.wxss**/
.container {
  overflow-x: hidden;
}

.weui-navbar__item.weui-bar__item_on {
  color: #0D3834;
  font-weight:bolder;
}

.weui-navbar__item {
  color: #435058;
}

.weui-tab {
  position: relative;
  height: 100%;
  color: #484848;
}

.weui-navbar__slider {
  width:24vw;
  background-color:#0D3834;
  margin-left:7vh;
}

.weui-navbar__title {
  font-size:15px;
}

.weui-navbar__item.weui-bar__item_on {
  color: #0D3834;
}

.weui-tab__content {
  background-color: white;
  margin-top:6.5vh;
}

.weui-tab__panel {
  padding-top:5.5vh;
}

.weui-navbar__title-type {
  border:2px solid #27AA9D;
  color:#08605F;
  background-color:white;
  border-radius:20px;
  opacity:0.9;
  text-align:center;
  width:61%;
  padding:6px;
  box-shadow:0px 3px 12px rgba(0,0,0,0.1);
  font-size:4.5vw;
  margin:5vh;
}

.weui-navbar-type {
  display: flex;
  justify-content: center;
  margin-left:-6vh;
}

.weui-navbar__item-type {
  margin-left:-1vh;
}

.weui-navbar {
  border: 1rpx solid white;
}

.icon {
  width:6vw;
  height:3vh;
  animation-duration:3s;
  animation:animation 1000ms linear both;
  margin-left:1vh;
  margin-bottom:-24vh;
}

.filters {
  display:flex;
  margin-left:1vh;
}

.type {
  border-radius:21px;
  padding:6px;
  margin:6px;
  font-size:14px;
  color:#27AA9D;
  padding-right:11px;
  padding-left:11px;
  background-color:white;
  font-weight:bold;
}

.activefilter {
  background-color:#A7DDD7;
  color:#1F887E;
}

.all {
  background-color:white;
  border-radius:8px;
  padding:1vh;
  margin:1.5vh;
  font-size:15px;
  /* border:1px solid #5cc1b3; */
  color: #27AA9D;
}

.cards {
  margin:-3vh 0 11vh 0;
}

.card {
  display: flex;
  flex-direction: column;
  margin: 5vh 0;
  height: 38vh;
  box-shadow: 1px 2px 7px rgba(0,0,0,0.10);
  position: relative;
  background-color:white;
}

.rating-icon {
  display:flex;
  align-items:center;
  margin-top:1vh;
}

.card-body {
  height: 38vh;
  background-size: cover !important;
  background-position: center;
  color: white;
  position: relative;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top:28vh;
}

.rating {
  color:#484848;
  font-size:15px;
  margin-left:1vh;
  font-weight:bold;
}

.likes {
  font-size:15px;
  padding-left:0.5vh;
}

.card-description .name {
  font-size:17.5px;
  font-weight:bold;
  margin:1vh;
  color:#0D3834;
}

.card-footer .styles {
  background-color:#A7DDD7;
  color:#1F887E;
  font-size:4vw;
  border-radius:1vh;
  padding:1vw;
  margin:1vw;
  border-radius:4vw;
  font-weight:bold;
  padding-right:3vw;
  padding-left:3vw;
  opacity:0.9;
}

.page-body {
  width:100vw;
  margin-top:-7vh;
}

.page-section-gap{
  box-sizing: border-box;
  margin-top:11vh;
  border-top:2px solid white;
  margin-bottom:-2vh;
}

.page-body-button {
  margin-bottom:3vh;
  width:69vw;
  border-radius:22px;
  font-size:28rpx;
  background-color:#27AA9D !important;
  margin-top:1.5vh;
  font-weight:bold;
}

.btn-area {
  background-color: white;
  padding-top:2vh;
}

.image-size {
  height:38vh;
  width:100vw;
  background-size: cover !important;
  background-position: center;
  box-shadow: 0px 3px 15px rgba(0,0,0,0.2);
  position: relative;
  margin-top:-14vh;
}

.scroll-bar {
  background: white;
  display: flex;
  margin-top:-3vh;
}

.scroll-list-box {
  height: 20vh;
  width: 100vw;
  margin-left:1vh;
}

.scroll-list {
  height: 150rpx;
  white-space: nowrap;
}

.scroll-item {
  display:inline-block;
  width:347rpx;
  height:227rpx;
  background-repeat:no-repeat;
  background-position:center;
  background-size:333rpx;
  background-color:white;
  border:5px solid white;
  border-radius:23px;
}

.toprated {
  margin:4vh;
  font-weight:bold;
  font-size:15px;
}

.home-button {
  width:7.5vw;
  height:4vh;
}

.create-button {
  width:7.5vw;
  height:4vh;
}

.icontext {
  display:flex;
  flex-direction:column;
  align-items:center;
}

.tabwords {
  font-size:2.5vw;
  text-transform:uppercase;
  letter-spacing:1px;
  color: #989898;
}

.fixed-bar {
  background-color:white;
  position: fixed;
  bottom: 0;
  justify-content: space-around;
  display: flex;
  width: 100vw;
  padding:1vh;
  height:5.5vh;
  border-top:2px solid #F0F0F0;
}

.styles-flex {
  display: flex;
  margin-bottom:-25vh;
}

