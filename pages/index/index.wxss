.cards {
  margin-top: 6%;
}
.card {
  display: flex;
  flex-direction: column;
  margin: 19px;
  height: 26vh;
  box-shadow: 0px 3px 12px rgba(0,0,0,0.2);
  border-radius: 6px;
  position: relative;

}
.card-body {
  height: 80%;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  background-size: cover !important;
  background-position: center;
  color: white;
  position: relative;
  border-radius: 6px 6px 0 0;
}

.card-footer {
  background-color: white;
  height: 5vh;
  border-radius: 6px;
  display: flex;
  justify-content: flex-end;
  align-items: center
}

.card-description .name {
  color:white;
position:absolute;
top:0vh;
margin:2vh;
font-size:1em;
}

.card-footer .rating {
  margin:1vh;
  background-color: rgba(0, 0, 0, 0.5);
  color:white;
  width:9vw;
  text-align:center;
}

.page-body {
  width:100vw;
margin-top:-9vh;
}
 .page-section-gap{
  box-sizing: border-box;
  margin-top:14vh;
}

.page-body-button {
  margin-bottom: 30rpx;
}
