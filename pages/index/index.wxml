<!-----------------LIST AND MAP TABBAR---------->
<view class="weui-tab">
    <view class="weui-navbar">
        <block wx:key="index" wx:for="{{tabs}}" wx:key="*this">
            <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                <view class="weui-navbar__title">{{item}}</view>
            </view>
        </block>
    <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
    </view>

<!-------------LIST TAB---------->
  <view class="weui-tab__panel">
  <view class="weui-tab__content" hidden="{{activeIndex != 0}}">


<!-------------FILTER Tags---------->
<view class='1scroll-bar'>
  <view class='1scroll-left' bindtap='scrollLeft'>
    <text class='1iconfont icon-back'></text>
  </view>
  <scroll-view scroll-x class='1scroll-list-box' scroll-into-view="in-{{scrollInto}}" scroll-with-animation>
    <view class='1scroll-list'>
      <view class='1scroll-item' id="in-{{index}}"> 
      <view class="filters">
     
  <view class="filters">
      <view class="type" data-id="all" bindtap="filterType">All</view>
      <view class="type" data-id="skateparks" bindtap="filterType">Skateparks</view>
      <view class="type" data-id="ledges" bindtap="filterType">Ledges</view>
      <view class="type" data-id="pools" bindtap="filterType">Pools</view>
      <view class="type" data-id="ramps" bindtap="filterType">Ramps</view>
      <view class="type" data-id="slopes" bindtap="filterType">Slopes</view>
      <view class="type" data-id="rails" bindtap="filterType">Rails</view>
      <view class="type" data-id="stairs" bindtap="filterType">Stairs</view>
      <view class="type" data-id="bowls" bindtap="filterType">Bowls</view>
  </view>
      </view>
    </view>

    </view>

  </scroll-view>
  <view class='scroll-right' bindtap='scrollRight'>
    <text class='iconfont icon-right'></text>
  </view>
</view>
 

    <!----------List of ALL cards in List tab unfiltered------------------->
  <view class="cards">
    <block wx:for="{{activespots}}" wx:key="index" wx:for-item="skatespot">
      <view class="card">
        <view class="card-body" data-id="{{skatespot.id}}" bindtap='showSkatespot' style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('{{skatespot.images[0].url}}');">

            <view class="card-description">
                <text class="name">{{skatespot.name}}</text>
            </view>
          <view class="card-footer">
          <view class="rating-icon">
              <text class='rating'>{{skatespot.cached_votes_total}}</text>
                <image class='icon' src="/assets/likes-white.png"></image>
          </view>
              <text class='styles'>{{skatespot.tag_list}}</text>
          </view>
          </view>
      
        </view>
    </block>
  </view>

  
 <!--------End of list/filter tab ----------------->
        </view>
      </view>
    </view>

<!----------------Map tab---------->
  <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
    <view class="page-body">
    <view class="page-section page-section-gap">
      <map
        id="myMap"
        style="width: 100%; height: 75vh;"
        latitude="{{latitude}}"
        longitude="{{longitude}}"
        markers="{{markers}}"
        covers="{{covers}}"
        show-location=true
        controls=''
      ></map>
    </view>
    <view class="btn-area">
      <button bindtap="moveToLocation" class="page-body-button" type="primary">Move To Your Location</button>
    </view>

