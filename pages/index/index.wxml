<!--index.wxml-->
 
  <!-----------------LIST AND MAP TABBAR---------->
<view class="weui-tab">
    <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
            <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                <view class="weui-navbar__title">{{item}}</view>
            </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
    </view>
    <!-------------List---------->
    <view class="weui-tab__panel">
    <view class="weui-tab__content" hidden="{{activeIndex != 0}}">

    <!-----------Cards--------->
      <view class="cards">
        <!-- <text class="cards-text">All</text> -->
        <block wx:for="{{skatespots}}" wx:for-item="skatespot">
          <view class="card">
            <view class="card-body" bindtap='showSkatespot' data-id="{{skatespot.id}}" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.pexels.com/photos/168335/pexels-photo-168335.jpeg?auto=compress&cs=tinysrgb&h=650&w=940');">
                <view class="card-description">
                    <text class="name">{{skatespot.name}}</text>
                </view>
            </view>
                <view class="card-footer">
                  <text class='rating'>{{skatespot.rating}}</text>
                </view>
          </view>
        </block>
      </view>
    </view>
  </view>
</view>

            <!----------------Map---------->
  <view class="weui-tab__content" hidden="{{activeIndex != 1}}">

      <view class="page-body">
      <view class="page-section page-section-gap">
        <map
          id="myMap"
          style="width: 100%; height: 300px;"
          latitude="{{latitude}}"
          longitude="{{longitude}}"
          markers="{{markers}}"
          covers="{{covers}}"
          show-location
        ></map>
      </view>
      <view class="btn-area">
        <button bindtap="getCenterLocation" class="page-body-button" type="primary">获取位置</button>
        <button bindtap="moveToLocation" class="page-body-button" type="primary">移动位置</button>
        <button bindtap="translateMarker" class="page-body-button" type="primary">移动标注</button>
        <button bindtap="includePoints" class="page-body-button" type="primary">缩放视野展示所有经纬度</button>
      </view>
    </view>
  </view>
      