  
<!-----------------LIST AND MAP TABBAR---------->
<view class="weui-tab">
    <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
            <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                <view class="weui-navbar__title">{{item}}</view>
            </view>
        </block>
    <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
    </view>

<!-------------LIST TAB---------->
  <view class="weui-tab__panel">
  <view class="weui-tab__content" hidden="{{activeIndex != 0}}">


<!-------------FILTER Tags---------->
  <view class="filters">
    <view class="type" bindtap="filterType">All</view>
      <view class="type" bindtap="filterType">Skateparks</view>
       <view class="type" bindtap="filterType">Pyramids</view>
    <view class="type" bindtap="filterType">Ledges</view>
      <view class="type" bindtap="filterType">Pools</view>
      <view class="type" bindtap="filterType">Ramps</view>
      <view class="type" bindtap="filterType">Slopes</view>
       <view class="type" bindtap="filterType">Rails</view>
       <view class="type" bindtap="filterType">Stairs</view>
     <view class="type" bindtap="filterType">Bowls</view>
  </view>
 

    <!----------List of ALL cards in List tab unfiltered------------------->
  <view class="cards">
    <block wx:for="{{skatespots}}" wx:key="index" wx:for-item="skatespot">
      <view class="card">
        <view class="card-body" data-id="{{skatespot.id}}" bindtap='showSkatespot' style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.pexels.com/photos/168335/pexels-photo-168335.jpeg?auto=compress&cs=tinysrgb&h=650&w=940');">

            <view class="card-description">
                <text class="name">{{skatespot.name}}</text>
            </view>
          </view>
            <view class="card-footer">
              <text class='rating'>{{skatespot.cached_votes_total}}</text>
              <image class='icon' src="/assets/heart.png"></image>
              <text class='location'>{{skatespot.location}}</text>
              
            </view>
        </view>
    </block>
  </view>

  
 <!--------End of list/filter tab ----------------->
        </view>
      </view>
    </view>

<!----------------Map tab---------->
  <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
    <view class="page-body">
    <view class="page-section page-section-gap">
      <map
        id="myMap"
        style="width: 100%; height: 400px;"
        latitude="{{latitude}}"
        longitude="{{longitude}}"
        markers="{{markers}}"
        covers="{{covers}}"
        show-location=true
        controls=''
      ></map>
    </view>
    <view class="btn-area">
      <button bindtap="moveToLocation" class="page-body-button" type="primary">Move to location</button>
    </view>
    <!-----end of map tab---->
  </view>
 </view>
      
